<Window x:Name="TerminalWindow" x:Class="NoteByteTerminal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteByteTerminal"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Loaded="TerminalWindow_Loaded"
        Title="MainWindow" Height="260" Width="800" WindowStyle="None" ResizeMode="NoResize" Icon="/Main.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="84*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TerminalOutput" Margin="10,10,10,57" Grid.Row="1" TextWrapping="Wrap" SelectionBrush="#FFBAD400" BorderBrush="Black" Background="#FFFFFFFA"/>

        <TextBox x:Name="ArgsText" Height="20" Margin="342,217,70,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ComboBox x:Name="CommandText" HorizontalAlignment="Left" Height="20" Margin="80,217,0,0" Grid.Row="1" VerticalAlignment="Top" Width="220" IsEditable="True">
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
        </ComboBox>
        <TextBlock x:Name="ExitCodeText" HorizontalAlignment="Left" Height="16" Margin="10,182,0,0" Grid.Row="1" TextWrapping="Wrap" Text="退出代码：" VerticalAlignment="Top" Width="145"/>
        <TextBox x:Name="WorkDirText" Height="17" Margin="80,200,10,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
        <Label Content="工作目录：" HorizontalAlignment="Left" Margin="16,196,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="指令：" HorizontalAlignment="Left" Margin="40,212,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="参数:" HorizontalAlignment="Left" Margin="300,212,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button x:Name="RunCommandButton" Height="20" Margin="0,217,10,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="60" BorderBrush="Black" Background="White" Content="执行" Click="RunCommandButton_Click"/>
        <Button x:Name="EventWindowDownAndUpButton" Content="▲" Height="15" Margin="0,242,0,0" Grid.Row="1" VerticalAlignment="Top" Background="#FF0087FF" BorderBrush="Red" Foreground="Black" Click="EventWindowDownAndUpButton_Click"/>
        <Grid x:Name="CodeEditorGrid" Background="White" Margin="0,3,0,15" Grid.RowSpan="2" Visibility="Hidden">
            <Button x:Name="CodeEditorSaveButton" Content="保存" HorizontalAlignment="Left" Height="22" Margin="10,10,0,0" VerticalAlignment="Top" Width="65" BorderBrush="Black" Background="White" Click="CodeEditorSaveButton_Click"/>
            <TextBox x:Name="CodeEditorTextBox" Margin="10,37,10,10" TextWrapping="Wrap" Text="TextBox"/>
            <Button x:Name="CodeEditorCancelButton" Content="取消" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Height="22" Width="70" BorderBrush="Black" Background="White" Click="CodeEditorCancelButton_Click"/>
            <Button x:Name="CodeEditorWindowButton" Content="窗口模式" HorizontalAlignment="Left" Height="22" Margin="155,10,0,0" VerticalAlignment="Top" Width="80" Background="White" BorderBrush="Black" Click="CodeEditorWindowButton_Click"/>
        </Grid>

    </Grid>
</Window>
